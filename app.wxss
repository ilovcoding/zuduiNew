.weImgScroll{
  height: 80rpx;
  white-space: nowrap;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.all_list {
  width: 100%;
  height: 180rpx;
  border-bottom: 2rpx silver solid;
  position: relative;
}

.all_line {
  border: 2rpx rgb(208, 208, 208);
}

.all_image {
  margin: 10rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  float: left;
}

.people {
  line-height: 30rpx;
  opacity: 0.77;
  color: rgba(16, 16, 16, 1);
  font-size: 12px;
  font-family: Roboto;
}

.middle-line {
  margin-top: 8rpx;
  width: 100%;
  height: 10rpx;
  background: silver;
  opacity: 0.5;
}

.over_act {
  color: silver;
  opacity: 0.7;
  margin-left: 20rpx;
}

.create_act {
  position: absolute;
  bottom: 5vh;
  right: 50rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: rgba(255, 152, 0, 1);
  /* text-align: center; */
}

.create_act text {
  display: block;
  position: relative;
  border-radius: 50%;
  color: #fff;
  width: 140rpx;
  height: 140rpx;
  font-size: 140rpx;
  text-align: center;
  margin-left: 10rpx;
  margin-top: 10rpx;
  line-height: 140rpx;
}

.iscard {
  font-size: 20rpx;
  color: #0f0;
  width: 100rpx;
  height: 50rpx;
  position: absolute;
  top: 30rpx;
  right: 20rpx;
  text-align: center;
  border: 1rpx #0f0 solid;
}

.actText {
  height: 100rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: #c8c8c8;
  font-weight: bolder;
  margin-right: 20rpx;
}

.itemHead {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #000;
  font-weight: bolder;
}

.background {
  position: absolute;
  z-index: -100;
  width: 100%;
  background: rgb(245, 245, 245);
}

.back {
  position: absolute;
  z-index: -200;
  background: rgb(245, 245, 245);
  width: 100%;
  height: 100vh;
}

.gfinfo {
  margin: 40rpx;
  font-size: 24rpx;
  font-family: Robotp;
  color: #5f6874;
  word-break: break-all;
  text-indent: 48rpx;
}

.gfjoin {
  margin: 40rpx;
  font-family: Robotp;
  font-size: 24rpx;
  color: #c2c2c2;
}

/* 打卡 底部 滚动 */

.btn1 {
  display: inline-block;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  font-weight: bolder;
}

.btn2 {
  display: inline-block;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  font-weight: bolder;
  border-bottom: #b5b5b5 6rpx solid;
}

/*动态和排行榜的定位*/

.pos1 {
  display: inline-block;
  margin-left: 240rpx;
  margin-top: 24rpx;
}

.pos2 {
  float: right;
  margin-right: 240rpx;
  margin-top: 24rpx;
}

/*动态·排行榜 --end*/

.line {
  display: block;
  width: 100%;
  border-top: 1rpx solid #b5b5b5;
}

.gftime {
  font-size: 24rpx;
  color: #5f6874;
  margin-left: 40rpx;
  font-weight: bolder;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.gftime text {
  display: inline-block;
  margin-right: 20rpx;
}

.gftitle {
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 40rpx;
  padding-top: 50rpx;
}

.gfinfoback {
  /* margin-top: -20rpx; */
  /* padding-top: 10rpx; */
  padding: 10rpx;
  margin-left: 0rpx;
  width: 100%;
  background: rgb(245, 245, 245);
}
