<button class='all_list' catchtap='gfactive'>
  <image class='all_image' src='../../images/gfactivity.png'></image>
  <view class='gfactive'>参与更多精彩活动</view>
</button>
<view wx:for="{{array}}" class='all_list' catchtap='cardinfo' data-iscard='{{item.iscard}}' id='{{item.id}}' wx:if="{{item.isend==1}}">
  <image class='all_image' src='{{item.userid}}'></image>
  <view style='width:600rpx;'>
    <view class='itemHead'>{{item.head}}</view>
    <view class='actText'>{{item.text}}</view>
    <view class='actText'>{{item.count}}人已申请加入</view>
  </view>
  <button class='iscard' catchtap='getcard' id='{{item.id}}' disabled='{{item.iscard==1}}'>{{item.iscard==1?"OK":"打卡"}}</button>
  <button class='iscard2' catchtap='day' id='{{item.id}}'>日历</button>
</view>