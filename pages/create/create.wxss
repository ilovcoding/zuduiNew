.userInfo view input {
  padding-top: 14rpx;
}

button {
  color: #fff;
  font-size: 34rpx;
  width: 660rpx;
  height: 86rpx;
  background: #09bb07;
}

.message {
  margin: 30rpx;
  font-size: 20rpx;
  color: gray;
}
