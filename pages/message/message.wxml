<!--pages/message/message.wxml-->
<view class="top_band">
  <!-- <view class='wline'></view> -->
  <view data-num='1' bindtap='change_band' class="top_band_text {{_num==1?'change':''}}">全部内容</view>
  <view data-num='2' bindtap='change_band' class="top_band_text  {{_num==2?'change':''}}">习惯养成</view>
  <view data-num='3' bindtap='change_band' class="top_band_text {{_num==3?'change':''}}">比赛组队</view>
</view>
<swiper class='swiper' indicator-dots='true' autoplay='true' interval='3000' duration='2000'>
  <block wx:for="{{gfimg}}">
    <swiper-item>
      <image src="{{item}}" class='gfimg' catchtap="{{index==1?'introduce':'gfactivity'}}"></image>
    </swiper-item>
  </block>
</swiper>
<scroll-view scroll-y style='height:1000rpx'>
  <view wx:for="{{array}}" class='all_list' id='{{item.id}}' data-acttype='{{item.type}}' bindtap='teaminfo'>
    <image class='all_image' src='{{item.userid}}'></image>
    <view class='itemHead'>{{item.head}}</view>
    <view class='actText'>{{item.text}}</view>
    <view class='actText'>{{item.count}}人加入</view>
    <view wx:if="{{item.isend==0}}">
      <image class='cov' src='../../images/yz.png'></image>
    </view>
  </view>
</scroll-view>
<view class='addimg' bindtap='create_act'>
  <image src='../../images/add.png'></image>
</view>