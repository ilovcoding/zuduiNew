<!--pages/message/message.wxml-->
<view class="top_band">
  <view data-num='1' bindtap='change_band' class="top_band_text {{_num==1?'change':''}}">全部内容</view>
  <view data-num='2' bindtap='change_band' class="top_band_text  {{_num==2?'change':''}}">习惯养成</view>
  <view data-num='3' bindtap='change_band' class="top_band_text {{_num==3?'change':''}}">比赛组队</view>
</view>
<!-- 官方活动入口 -->
<!-- <image src="{{gfactiveImg}}" class='gfimg' catchtap="{{index==1?'introduce':'gfactivity'}}"></image> -->
<view wx:for="{{actArray}}" id='{{item.id}}' data-acttype='{{item.type}}' bindtap='teaminfo' class='actArray'>
  <view class='top'>
    <image src='{{item.user.image}}'></image>
    <view class='text-col'>
      <text class='head'>{{item.head}}</text>
      <text class='time'>{{item.time}}</text>
    </view>
  </view>
  <view class='mainText'>{{item.text}}</view>
  <!-- 数据库没设计好先用name字段代替地址 -->
  <view class='{{"img"+item.name.length}}'>
    <image wx:for='{{item.name}}' src='{{item}}'></image>
  </view>
  <view class='bottom'>
    <!--参与人数  -->
    <view>
      <image src='../../images/joincount.png'>
      </image>
      <text>{{item.count}}</text>
    </view>
    <!-- 打卡人数 -->
    <view>
      <image src='../../images/comment.png'>
      </image>
      <text>1024</text>
    </view>
    <!-- 转发到朋友圈 -->
    <view>
      <image src='../../images/friend.png'></image>
    </view>
  </view>
</view>
