/* pages/message/message.wxss */

/* 导航栏 样式 */
.searchNav{
  display: flex;
  flex-direction: column;
  position: fixed;
}
.search{
  width: 670rpx;
  height: 4vh;
  font-size: 26rpx;
  color: gray;  
  line-height: 4vh;
  border-left: 40rpx  solid #ff9800;
  border-right: 40rpx solid #ff9800;
  background: white;
}
.search image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.padding{
  padding-top: 10vh;
}
.top_band {
  background: #ff9800;
  /* 子组件 top_band_text 采用flex布局*/
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 6vh;
}

.top_band_text {
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  font-family: Robotp;
  line-height: 60rpx;
}
.change {
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  font-family: Robotp;
  line-height: 60rpx;
  border-bottom: 6rpx #fff solid;
}

/* 每个活动板块样式 */

.actArray {
  border-bottom: solid 10rpx rgba(190, 182, 182, 0.39);
}

.top {
  display: flex;
  flex-direction: row;
}

.top image {
  margin-left: 20rpx;
  margin-top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.text-col {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.head {
  font-size: 20rpx;
  line-height: 40rpx;
  font-weight: bolder;
}

.time {
  font-size: 20rpx;
  color: rgba(221, 212, 212, 0.9);
  line-height: 40rpx;
}

.mainText {
  font-size: 26rpx;
  margin-left: 20rpx;
}

/* 模板中图片的四种样式 */

.img1 {
  color: red;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.img1 image {
  width: 100%;
}

.img2 {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.img2 image {
  
  width: 50%;
}

.img3 {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.img3 image{
  width: 33%;
}
/* .img4{
  display: flex;
  flex-direction: row;
} */
.img4 image{
  width: 50%;
  height: 200rpx;
}

.img5 image, .img6 image, .img7 image, .img8 image, .img9  image{
  height: 200rpx;
  width: 33%
}
/* 底部样式 */
.bottom{
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin: 20rpx;
}
.bottom image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.bottom view text{
  font-size: 26rpx;
  color: rgba(221, 212, 212, 0.9);
}
.gfimg {
  width: 100%;
  height: 354rpx;
}
