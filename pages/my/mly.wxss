/* pages/my/mly.wxss */

image {
  margin-top: 50rpx;
  width: 700rpx;
  height: 200rpx;
  margin-left: 20rpx;
}

.mly {
  margin: 20rpx;
  font-size: 36rpx;
  color: silver;
  text-align: center;
}

/* pages/card/getcard.wxss */

.head {
  background: #f5f5f5;
  width: 100%;
  height: 88rpx;
}

.head text {
  display: inline-block;
  color: #666;
  margin: 20rpx;
  font-size: 28rpx;
}

.content {
  margin: 20rpx;
  width: 716rpx;
  height: 300rpx;
  color: #000;
  font-size: 28rpx;
}

.line {
  background: #efeff4;
  width: 100%;
  height: 20rpx;
}

.pic {
  width: 100%;
  height: 200rpx;
}

.pic view {
  display: inline;
}

.pic image {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
}

.pluspic {
  margin: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid silver;
}

.btn {
  margin-left: 100rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  font-size: 28rpx;
  background-color: #09bb07;
  float: left;
}

.kefu {
  float: right;
  width: 200rpx;
  margin-right: 100rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #000;
  font-size: 28rpx;
}
