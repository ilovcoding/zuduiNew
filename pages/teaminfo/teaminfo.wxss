/* pages/teaminfo/teaminfo.wxss */

.head {
  font-size: 30rpx;
  font-family: inherit;
  font-weight: bold;
  padding-top: 20rpx;
  margin-left: 40rpx;
}

.time {
  font-size: 24rpx;
  color: #5f6874;
  font-weight: bolder;
  margin: 20rpx;
}

.time view {
  display: inline-block;
  margin: 20rpx;
}

.swi {
  margin-top: 50rpx;
  height: 400rpx;
}
.swi swiper-item{
  height: 400rpx;
}
.swi image{
  width: 100%;
  height: 400rpx;
}
.info {
  margin: 40rpx;
  font-size: 24rpx;
  color: #5f6874;
  font-weight: bolder;
  word-break: break-all;
  text-indent: 48rpx;
}

.join {
  margin: 40rpx;
  font-size: 24rpx;
  color: #c8c8c8;
  font-weight: bolder;
}

.hobby {
  height: 190rpx;
  border-top: 4rpx silver solid;
}
.slide-image{
  width: 100%;
  height: 300rpx;
}
.hobby image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
  float: left;
  margin: 40rpx;
}

.more {
  color: #3f51b5;
  position: relative;
  float: right;
  font-size: 28rpx;
}
.masterInfo{
  margin: 0 auto;
  width: 550rpx;
  text-align: left;
  line-height: 80rpx;
  background: #fff;
  border-radius: 20rpx;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.masterInfo view{
  border-bottom: silver 1rpx solid;
  display: flex;
  flex-direction: row;
}
.img1 {
  color: red;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.img1 image {
  width: 100%;
}

.img2 {
  height: 300rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.img2 image {
  
  width: 50%;
}

.img3 {
  height: 200rpx;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}
.img3 image{
  width: 33%;
}
/* .img4{
  display: flex;
  flex-direction: row;
} */
.img4 image{
  width: 50%;
  height: 200rpx;
}

.img5 image, .img6 image, .img7 image, .img8 image, .img9  image{
  height: 200rpx;
  width: 33%
}
.button{
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  width: 200rpx;
}